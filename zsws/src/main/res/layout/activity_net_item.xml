<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_taskList_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_netName"
            style="@style/CommenItemTitleStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp"
            android:text="农行支行" />

        <TextView
            android:id="@+id/tv_taskList_new"
            style="@style/CommenItemTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="2dp"
            android:text="NEW"
            android:textColor="#D01500"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_contact"
                style="@style/CommItemContentStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系人" />

            <TextView
                android:id="@+id/tv_address"
                style="@style/CommItemContentStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_contact"
                android:text="地址：" />

            <LinearLayout
                android:id="@+id/ll_taskType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_address"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_planSendBox"
                    style="@style/CommItemContentStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="计划送箱：" />

                <TextView
                    android:id="@+id/tv_taskList_taskType"
                    style="@style/CommItemContentStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_taskList_taskType" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_taskList_moneyNo"
                style="@style/CommItemContentStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_taskList_taskStatus"
                android:layout_marginBottom="5dp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>