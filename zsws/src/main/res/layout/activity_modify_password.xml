<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView"

        android:orientation="vertical"
        android:paddingLeft="@dimen/left_side_padding"
        android:paddingRight="@dimen/right_side_padding">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.1"
                android:text="原 密 码: "
                android:textSize="@dimen/normal_text_size" />

            <EditText
                android:id="@+id/modify_password_old_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.6"
                android:inputType="textPassword"
                android:text=""
                android:textSize="18sp"></EditText>

            <ImageButton
                android:id="@+id/modify_password_old_password_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/eyes"
                android:gravity="right"
                android:text="原 密 码" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.1"
                android:text="新 密 码: "
                android:textSize="@dimen/normal_text_size" />

            <EditText
                android:id="@+id/modify_password_new_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.6"
                android:inputType="textPassword"
                android:text=""
                android:textSize="18sp"></EditText>

            <ImageButton
                android:id="@+id/modify_password_new_password_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/eyes"
                android:gravity="right"
                android:text="新 密 码" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.1"
                android:text="确认密码:"
                android:textSize="@dimen/normal_text_size" />

            <EditText
                android:id="@+id/modify_password_confirm_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.6"
                android:inputType="textPassword"
                android:text=""
                android:textSize="18sp"></EditText>

            <ImageButton
                android:id="@+id/modify_password_confirm_password_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/eyes"
                android:gravity="right"
                android:text="确认密码" />
        </LinearLayout>

        <Button
            android:id="@+id/modify_password_commit_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_common_selector_blue_btn"
            android:text="保  存"
            android:textColor="@color/white"
            android:textSize="@dimen/btn_text_size" />
    </LinearLayout>
</LinearLayout>
